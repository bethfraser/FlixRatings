<h1>Add a ranking</h1>

<form action="/rankings" method="post">

  Current User: <%= @current_user.name %> <br><br>
  <input type="hidden" name="user_id" value="<%= @current_user.id %>">
  <input type="hidden" name="decade_start" value="<%= @decade_start %>">
  <label for="first">#1 Film of the <%= @decade_title %></label>
  <select name="first">
  <% @films.each do |film| %>
  <option value="<%= film.id %>"><%= film.title %></option>
  <% end %>
  </select><br>

  <label for="second">#2 Film of the <%= @decade_title %></label>
  <select name="second">
  <% @films.each do |film| %>
  <option value="<%= film.id %>"><%= film.title %></option>
  <% end %>
  </select><br>

  <label for="third">#3 Film of the <%= @decade_title %></label>
  <select name="third">
  <% @films.each do |film| %>
  <option value="<%= film.id %>"><%= film.title %></option>
  <% end %>
  </select>
  <br><br>
  <input type="text" name="comments" placeholder="Add comments here"><br>

  <input type='submit' value="Submit ranking">
</form>
